      ga('send', 'pageview');

  </script>
</head>
    <body class="application <%=params[:controller]%> <%=params[:action]%>  <%=@os=='Android' ? 'android' : '' %>  ">
   
    <div id="o-wrapper" class="o-wrapper" style="display:none;">

      <div class="c-buttons">
        <button id="c-button--slide-left" class="c-button">Slide Left</button>
        <button id="c-button--slide-right" class="c-button">Slide Right</button>
        <button id="c-button--push-left" class="c-button">Push Left</button>
        <button id="c-button--push-right" class="c-button">Push Right</button>
        <button id="c-button--slide-top" class="c-button">Slide Top</button>
        <button id="c-button--slide-bottom" class="c-button">Slide Botton</button>
        <button id="c-button--push-top" class="c-button">Push Top</button>
        <button id="c-button--push-bottom" class="c-button">Push Bottom</button>
      </div>

      <!-- other content in here -->

    </div><!-- /o-wrapper -->

    <!--<nav id="c-menu--slide-right" class="c-menu c-menu--slide-right">
      <button class="c-menu__close" style="display:none;">&larr; Close Menu</button>
      <ul class="c-menu__items">
        <li class="c-menu__item"><a href="#" class="c-menu__link"></a></li>
        <li class="c-menu__item"><a href="<%=root_path%>" class="c-menu__link">首頁</a></li>
        <li class="c-menu__item"><a href="<%=root_path%>" class="c-menu__link">圖鑑</a></li>
      </ul>
    </nav> /c-menu slide-left -->

    <!--<div id="c-mask" class="c-mask"></div> /c-mask -->
    
    
    
    
    <% if flash[:error] || flash[:notice] %>
    <div class="flashMessageWrapper">
        <div class="flashMessageInner <%=flash[:error] ? "error" : "" %>">
            <div class="textWrapper">
                <%=flash[:error] ? flash[:error] : flash[:notice] %>
            </div>
            <div class="close"></div>
            <div class="clearer"></div>
        </div>
    </div>
    <script>
        $(".flashMessageWrapper .flashMessageInner").click(function() {
            $(".flashMessageWrapper").remove();
        });
    </script>
    <% end %>
    <div id="container">
    <div id="container-inner">
        <header id="main-header">
            <div class="logo-wrapper"><a href="<%=root_path%>"><div id="logo"></div></a></div>
            <div class="slide-menu-wrapper">
                <button class="c-hamburger c-hamburger--rot" style="display:none">
                    <span>toggle menu</span>
                </button>
            </div>
            <div class="clearer"></div>
        </header>
        <div class="clearer"></div>
        <ul id="main-menu">
            <a href="<%=root_path%>"><li class="item index <%=(params[:controller]=="pets" && params[:action]=="index") ? "selected" : "" %>">首頁</li></a>
            <a href="<%=root_path%>"><li class="item illustrations <%=(params[:controller]=="pets" && params[:action]=="show") ? "selected" : "" %>">圖鑑</li></a>
            <li class="clearer"></li>
        </ul>
        <%= yield %>
    </div> <!-- #container-inner -->
    </div> <!-- #container -->
    
    
</body>
</html>